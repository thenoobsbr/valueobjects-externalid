    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <OutputType>library</OutputType>
    <GenerateFullPaths>true</GenerateFullPaths>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>The Noobs</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
    <RepositoryType>GIT</RepositoryType>
    <LangVersion>default</LangVersion>
    <PackageIcon>icon.png</PackageIcon>

    <PackageId>TheNoobs.ValueObjects.ExternalId</PackageId>
    <Description>External id creation.</Description>
    <PackageProjectUrl>https://github.com/thenoobsbr/valueobjects-externalid</PackageProjectUrl>
    <RepositoryUrl>https://github.com/thenoobsbr/valueobjects-externalid</RepositoryUrl>
    <PackageTags>externalid, hash, valueobject, vo, netcore, dotnet, simple, abstraction</PackageTags>

    <UserSecretsId>{C9D80D17-F122-4A4E-9CC5-E26BCBAC34B3}</UserSecretsId>
    <ProjectGuid>{DCDB0677-9A16-4C87-83EE-DE89CDEF3474}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hashids.net" Version="1.6.1" />
    <PackageReference Include="TheNoobs.ValueObjects.Abstractions" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\images\icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
